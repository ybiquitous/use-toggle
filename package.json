{
  "name": "@ybiquitous/use-toggle",
  "version": "0.0.6",
  "description": "React useToggle() utility hook",
  "author": "Masafumi Koba",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "hooks",
    "utility"
  ],
  "repository": "ybiquitous/use-toggle",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/cjs/index.js"
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.1.1",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "eslint-config-ybiquitous": "^13.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "jest": "^26.6.3",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "remark-preset-ybiquitous": "^0.0.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4",
    "ybiq": "^12.4.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest": "npm-run-all --print-label --parallel build build:*",
    "build": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit --project tsconfig.test.json",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "clean": "git clean -dx --force --exclude=node_modules --exclude=.husky",
    "prerelease": "git switch main && git pull && npm ci && npm run clean && npm test && npm run lint && npm run clean",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "prepare": "husky install",
    "prepublishOnly": "npm test"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix",
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "standard-version": {
    "sign": true,
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/react",
      "ybiquitous/typescript",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "parserOptions": {
      "project": "./tsconfig.test.json"
    },
    "ignorePatterns": [
      "coverage",
      "dist"
    ],
    "reportUnusedDisableDirectives": true
  },
  "jest": {
    "preset": "ts-jest"
  }
}
